{{>header}}

<div class="row event-details">
    <div class="col-md-12 text-center overflow-hidden">

        <img class="details-img"
             src="{{event.image}}" />
        <div class="my-3 p-3">
            <h2 class="display-5">{{event.name}}</h2>
            <p class="infoType">Description:</p>
            <p class="event-description">{{event.description}}</p>
            <p class="infoType">Date: <small>{{event.eventDate}}</small></p>
            <p class="infoType">People interested in: <small>{{event.interestedIn}}</small></p>
            <p class="infoType">Organizer: <small>{{event.organizedBy}}</small></p>
        </div>
        {{#if isOrganizer}}
            <a href="#/edit/{{event.objectId}}" class="btn btn-primary btn-lg">Edit the event</a>
            <a href="#/delete/{{event.objectId}}" class="btn btn-danger btn-lg">Close the event</a>
        {{else}}
            <a href="#/join/{{event.objectId}}" class="btn btn-info btn-lg">Join the event</a>
        {{/if}}
    </div>
</div>

{{>footer}}